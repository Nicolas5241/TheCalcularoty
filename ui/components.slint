export component RadioButtonGroup inherits HorizontalLayout {
	in property <[string]> labels: [""];
	in-out property <int> selected;
	callback toggled(int);

	alignment: space-around;
	spacing: 20px;

	for label[i] in labels: CheckBox {
		checked: selected == i;
		toggled => {
			selected = i;
			toggled(selected);
		}
		text: label;
	}
}
